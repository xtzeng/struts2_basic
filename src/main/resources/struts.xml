<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.custom.i18n.resources" value="global" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.objectFactory" value="guice" />
	<constant name="guice.module" value="com.immutable.alias.bind.Binders" />
	<constant name="struts.objectFactory" value="guice" />
	<constant name="guice.module" value="com.immutable.alias.bind.Binders" />
	
	<package name="login" extends="struts-default">
		
		<action name="changeLocale" class="com.immutable.alias.i18n.ChangeLocale">
			<result>/login.jsp</result>
		</action>

		<action name="login" class="com.immutable.alias.action.UserAction">
			<result name="input">/userError.jsp</result>
			<result>/userSuccess.jsp</result>
		</action>
	</package>
	
</struts>
