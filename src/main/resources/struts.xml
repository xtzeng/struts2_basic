<struts>
    <constant name="struts.devMode" value="true" />
   <constant name="struts.custom.i18n.resources" value="bbs2013"></constant>
    <package name="admin" namespace="/admin" extends="struts-default" >
   		<action name="index">
   			<result>/admin/index.html</result>
   		</action>
       <action name="*-*" class="com.immutable.alias.bbs2013.action.{1}Action" method="{2}">
       		<result>/admin/{1}-{2}.jsp</result>
       		<result name="input">/admin/{1}-{2}.jsp</result>
       </action>
       <action name="lang" class="com.immutable.alias.bbs2013.action.LangAction">
       		<result>/admin/Login-input.jsp</result>
       </action>
