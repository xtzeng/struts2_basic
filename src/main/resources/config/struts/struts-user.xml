<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<package name="ssh2-user" extends="ssh2-default" namespace="/user">
	   <global-results>
	   		<result name="error" type="dispatcher">/common/error.jsp</result>
	   </global-results>
		<action name="main" class="userAction" method="main">
			<result name="index" type="dispatcher">
					/WEB-INF/jsp/index.jsp
			</result>
		</action>
		<action name="save" class="userAction" method="save">
			<result name="index" type="dispatcher">
					/WEB-INF/jsp/index.jsp
			</result>
		</action>
		
	</package>
</struts>




